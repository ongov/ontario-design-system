{
	"name": "@ongov/ontario-design-system-component-library-angular",
	"version": "7.0.0",
	"description": "Angular specific wrapper for ontario-design-system-component-library",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"ng": "ng",
		"start": "ng serve app-angular",
		"build": "pnpm run build:component-lib && pnpm run docs:copy:readme",
		"build:component-lib": "ng build component-library",
		"build:app": "ng build app-angular",
		"clean": "rm -rf build",
		"clean:full": "rm -rf node_modules && pnpm run clean",
		"watch": "ng build --watch --configuration development",
		"test": "ng test",
		"format:stencil": "prettier --write ./projects/component-library/src/lib/stencil-generated",
		"postbuild": "pnpm run copy:assets",
		"copy:images": "copyfiles -E -f \"./node_modules/@ongov/ontario-design-system-component-library/dist/ontario-design-system-components/assets/**/*\" dist/component-library/assets/images",
		"copy:fonts": "copyfiles -E -u 6 \"./node_modules/@ongov/ontario-design-system-component-library/dist/ontario-design-system-components/fonts/**/*\" dist/component-library/assets/fonts",
		"copy:favicons": "copyfiles -E -f \"./node_modules/@ongov/ontario-design-system-component-library/dist/ontario-design-system-components/favicons/**/*\" dist/component-library/assets/favicons",
		"copy:theme": "copyfiles -E -u 6 \"node_modules/@ongov/ontario-design-system-component-library/dist/ontario-design-system-components/styles/slotted-styles/**/*\" \"node_modules/@ongov/ontario-design-system-component-library/dist/ontario-design-system-components/styles/theme.scss\" dist/component-library/styles",
		"copy:assets": "pnpm run copy:images && pnpm run copy:favicons && pnpm run copy:fonts && pnpm run copy:theme",
		"docs:copy:readme": "ts-node ../../scripts/documentation-helper.ts -f README.md -p \"---\ntitle: Angular Component Library\n---\n\" -df ../docusaurus/docs/02-readme-angular.md"
	},
	"main": "./dist/component-library/index.t.ts",
	"module": "./dist/component-library/index.t.ts",
	"types": "./dist/component-library/index.t.ts",
	"styles": "./dist/component-library/styles/theme.scss",
	"files": [
		"dist/",
		"projects/component-library/src",
		"package.json",
		"README.md"
	],
	"dependencies": {
		"@ongov/ontario-design-system-component-library": "workspace:*",
		"@ongov/ontario-design-system-global-styles": "workspace:*",
		"copyfiles": "^2.4.1"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "21.1.0",
		"@angular/animations": "21.1.0",
		"@angular/cli": "~21.1.0",
		"@angular/common": "21.1.0",
		"@angular/compiler": "21.1.0",
		"@angular/compiler-cli": "21.1.0",
		"@angular/core": "21.1.0",
		"@angular/forms": "21.1.0",
		"@angular/platform-browser": "21.1.0",
		"@angular/platform-browser-dynamic": "21.1.0",
		"@angular/router": "21.1.0",
		"karma": "~6.4.4",
		"karma-chrome-launcher": "~3.2.0",
		"karma-coverage": "~2.2.1",
		"karma-jasmine": "~5.1.0",
		"karma-jasmine-html-reporter": "~2.1.0",
		"ng-packagr": "^21.1.0",
		"rxjs": "~7.8.1",
		"tslib": "^2.8.1",
		"typescript": "5.9.3"
	},
	"peerDependencies": {
		"@angular/common": ">=18 <22",
		"@angular/core": ">=18 <22",
		"@angular/router": ">=18 <22"
	}
}
