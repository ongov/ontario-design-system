{
	"name": "@ongov/ontario-design-system-component-library-react",
	"version": "7.0.0",
	"private": false,
	"description": "React specific wrapper for ontario-design-system-component-library",
	"license": "Apache-2.0",
	"sideEffects": false,
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"styles": "./dist/styles/theme.scss",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./components": {
			"types": "./dist/components.d.ts",
			"import": "./dist/components.js",
			"default": "./dist/components.js"
		},
		"./next": {
			"types": "./dist/components.server.d.ts",
			"import": "./dist/components.server.js"
		},
		"./react-component-lib": {
			"types": "./dist/react-component-lib/index.d.ts",
			"import": "./dist/react-component-lib/index.js",
			"default": "./dist/react-component-lib/index.js"
		},
		"./styles": {
			"default": "./dist/styles/theme.scss"
		},
		"./styles/*": "./dist/styles/*"
	},
	"files": [
		"dist/",
		"src/",
		"package.json",
		"README.md"
	],
	"scripts": {
		"build": "pnpm run clean && pnpm run compile && pnpm run docs:copy:readme && pnpm run docs:copy:docs",
		"postbuild": "pnpm run copy:assets",
		"clean": "rm -rf dist",
		"clean:full": "rm -rf node_modules && pnpm run clean",
		"compile": "pnpm run tsc",
		"copy:assets": "pnpm run copy:images && pnpm run copy:favicons && pnpm run copy:fonts && pnpm run copy:theme",
		"copy:favicons": "copyfiles -E -f \"./node_modules/@ongov/ontario-design-system-component-library/dist/ontario-design-system-components/favicons/**/*\" dist/assets/favicons",
		"copy:fonts": "copyfiles -E -u 6 \"./node_modules/@ongov/ontario-design-system-component-library/dist/ontario-design-system-components/fonts/**/*\" dist/assets/fonts",
		"copy:images": "copyfiles -E -f \"./node_modules/@ongov/ontario-design-system-component-library/dist/ontario-design-system-components/assets/**/*\" dist/assets/images",
		"copy:theme": "copyfiles -E -u 6 \"node_modules/@ongov/ontario-design-system-component-library/dist/ontario-design-system-components/styles/slotted-styles/**/*\" \"node_modules/@ongov/ontario-design-system-component-library/dist/ontario-design-system-components/styles/theme.scss\" dist/styles",
		"docs:copy:readme": "ts-node ../../scripts/documentation-helper.ts -f README.md -p \"---\ntitle: React Component Library\n---\n\" -df ../docusaurus/docs/03-readme-react.md",
		"docs:copy:docs": "ts-node ../../scripts/documentation-helper.ts -i ./docs -o ../docusaurus/docs",
		"format": "prettier --write .",
		"rollup": "rollup -c",
		"tsc": "tsc -p ."
	},
	"jest": {
		"preset": "ts-jest",
		"setupFilesAfterEnv": [
			"<rootDir>/jest.setup.js"
		],
		"testPathIgnorePatterns": [
			"node_modules",
			"dist"
		]
	},
	"dependencies": {
		"@ongov/ontario-design-system-component-library": "workspace:*",
		"@ongov/ontario-design-system-global-styles": "workspace:*",
		"@stencil/react-output-target": "^1.4.0"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.6.2",
		"@types/jest": "30.0.0",
		"@types/node": "^24.0.0",
		"@types/react": "19.2.10",
		"@types/react-dom": "19.2.3",
		"copyfiles": "^2.4.1",
		"jest": "^30.0.0",
		"prettier": "^3.4.2",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"typescript": "^5.6.3"
	},
	"peerDependencies": {
		"react": "^19.2.4",
		"react-dom": "^19.2.4"
	},
	"publishConfig": {
		"access": "public"
	},
	"authors": [
		{
			"name": "Scott Morris",
			"email": "Scott.Morris@ontario.ca"
		},
		{
			"name": "Elsa Ng",
			"email": "Elsa.Ng@ontario.ca"
		},
		{
			"name": "Erin Carrieres",
			"email": "Erin.Carrieres@ontario.ca"
		},
		{
			"name": "Meaghan Carrieres",
			"email": "Meaghan.Carrieres@ontario.ca"
		}
	]
}
