{
	"name": "@ongov/ontario-design-system-design-tokens",
	"version": "6.0.0-alpha.9",
	"private": false,
	"description": "Design Tokens defining the base values within the Ontario Design System",
	"license": "Apache-2.0",
	"main": "index.js",
	"style": "dist/css/_variables.css",
	"sass": "dist/scss/_variables.scss",
	"types": "./dist/ts/tokens.d.ts",
	"files": [
		"dist/",
		"package.json",
		"README.md"
	],
	"scripts": {
		"build": "node build.mjs && pnpm run docs:copy:readme",
		"clean": "rm -rf dist",
		"clean:full": "rm -rf node_modules && pnpm run clean",
		"test": "echo \"Error: no test specified\" && exit 1",
		"docs:copy:readme": "ts-node ../../scripts/documentation-helper.ts -f README.md -p \"---\\ntitle: Design Tokens\\n---\\n\" -df ../docusaurus/docs/04-readme-design-tokens.md"
	},
	"devDependencies": {
		"@types/node": "^22.10.10",
		"style-dictionary": "^4.3.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"authors": [
		{
			"name": "Scott Morris",
			"email": "Scott.Morris@ontario.ca"
		},
		{
			"name": "Elsa Ng",
			"email": "Elsa.Ng@ontario.ca"
		},
		{
			"name": "Erin Carrieres",
			"email": "Erin.Carrieres@ontario.ca"
		},
		{
			"name": "Meaghan Carrieres",
			"email": "Meaghan.Carrieres@ontario.ca"
		},
		{
			"name": "Nakib Momin",
			"email": "Nakib.Momin@ontario.ca"
		}
	],
	"exports": {
		".": {
			"sass": "./dist/scss/_variables.scss",
			"style": "./dist/css/_variables.css",
			"import": "./dist/js/tokens.js",
			"types": "./dist/ts/tokens.d.ts",
			"default": "./dist/js/tokens.js"
		},
		"./scss": {
			"sass": "./dist/scss/_variables.scss"
		},
		"./css": {
			"style": "./dist/css/_variables.css"
		},
		"./tokens": {
			"import": "./dist/js/tokens.js",
			"types": "./dist/ts/tokens.d.ts",
			"default": "./dist/js/tokens.js"
		}
	}
}
