{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"declaration": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"lib": ["dom", "es2022"],
		"module": "esnext",
		"target": "ES2022",
		"moduleResolution": "node",
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"jsx": "react",
		"jsxFactory": "h",
		"resolveJsonModule": true,
		"types": ["node", "jest", "uuid", "react", "react-dom"]
	},
	"include": ["src"],
	"exclude": ["node_modules"],
	"paths": {
		"@ongov/ontario-design-system-design-tokens/*": ["node_modules/@ongov/ontario-design-system-design-tokens/*"]
	},
	"ts-node": {
		// these options are overrides used only by ts-node
		"compilerOptions": {
			"module": "commonjs",
			"target": "esnext"
		}
	}
}
