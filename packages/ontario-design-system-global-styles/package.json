{
	"name": "@ongov/ontario-design-system-global-styles",
	"version": "7.0.0",
	"private": false,
	"description": "Includes the Ontario Design System global styles that are used for more generic elements and layouts, as well as fonts and favicon files.",
	"license": "Apache-2.0",
	"type": "module",
	"main": "dist/index.js",
	"style": "dist/styles/css/compiled/ontario-theme.min.css",
	"files": [
		"dist/",
		"package.json",
		"README.md"
	],
	"scripts": {
		"exports:generate": "node ./scripts/generate-scss-exports.mjs",
		"build": "pnpm run exports:generate && gulp deploy && pnpm run  docs:copy:readme",
		"clean": "rm -rf dist",
		"clean:full": "rm -rf node_modules && pnpm run clean",
		"scss": "sass --pkg-importer=node --watch ./src/styles/scss:dist/styles/css",
		"docs:copy:readme": "ts-node ../../scripts/documentation-helper.ts -f README.md -p \"---\ntitle: Global Styles\n---\n\" -df ../docusaurus/docs/05-readme-global-styles.md"
	},
	"devDependencies": {
		"@ongov/ontario-design-system-design-tokens": "workspace:*",
		"gulp": "^5.0.0",
		"gulp-autoprefixer": "^10.0.0",
		"gulp-clean-css": "^4.3.0",
		"gulp-concat": "^2.6.1",
		"gulp-if": "^3.0.0",
		"gulp-sass": "^6.0.1",
		"rimraf": "^6.0.1",
		"sass": "^1.83.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"authors": [
		{
			"name": "Scott Morris",
			"email": "Scott.Morris@ontario.ca"
		},
		{
			"name": "Elsa Ng",
			"email": "Elsa.Ng@ontario.ca"
		},
		{
			"name": "Erin Carrieres",
			"email": "Erin.Carrieres@ontario.ca"
		},
		{
			"name": "Meaghan Carrieres",
			"email": "Meaghan.Carrieres@ontario.ca"
		}
	],
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.js",
			"style": "./dist/styles/css/compiled/ontario-theme.min.css",
			"sass": "./dist/styles/scss/theme.scss"
		},
		"./styles/css/compiled/ontario-theme.min.css": "./dist/styles/css/compiled/ontario-theme.min.css",
		"./styles/scss/theme.scss": "./dist/styles/scss/theme.scss",
		"./styles/scss/theme": "./dist/styles/scss/theme.scss",
		"./styles/scss/1-variables/breakpoints.variables": "./dist/styles/scss/1-variables/_breakpoints.variables.scss",
		"./styles/scss/1-variables/colours.variables": "./dist/styles/scss/1-variables/_colours.variables.scss",
		"./styles/scss/1-variables/font-sizes.variables": "./dist/styles/scss/1-variables/_font-sizes.variables.scss",
		"./styles/scss/1-variables/font-weights.variables": "./dist/styles/scss/1-variables/_font-weights.variables.scss",
		"./styles/scss/1-variables/fonts.variables": "./dist/styles/scss/1-variables/_fonts.variables.scss",
		"./styles/scss/1-variables/global.variables": "./dist/styles/scss/1-variables/_global.variables.scss",
		"./styles/scss/1-variables/grid.variables": "./dist/styles/scss/1-variables/_grid.variables.scss",
		"./styles/scss/1-variables/letter-spacing.variables": "./dist/styles/scss/1-variables/_letter-spacing.variables.scss",
		"./styles/scss/1-variables/line-heights.variables": "./dist/styles/scss/1-variables/_line-heights.variables.scss",
		"./styles/scss/1-variables/spacing.variables": "./dist/styles/scss/1-variables/_spacing.variables.scss",
		"./styles/scss/1-variables/tokens.variables": "./dist/styles/scss/1-variables/_tokens.variables.scss",
		"./styles/scss/1-variables/typography.variables": "./dist/styles/scss/1-variables/_typography.variables.scss",
		"./styles/scss/1-variables/z-index.variables": "./dist/styles/scss/1-variables/_z-index.variables.scss",
		"./styles/scss/2-tools/functions/asset-helper.functions": "./dist/styles/scss/2-tools/functions/_asset-helper.functions.scss",
		"./styles/scss/2-tools/functions/global.functions": "./dist/styles/scss/2-tools/functions/_global.functions.scss",
		"./styles/scss/2-tools/functions/grid.functions": "./dist/styles/scss/2-tools/functions/_grid.functions.scss",
		"./styles/scss/2-tools/mixins/global.mixins": "./dist/styles/scss/2-tools/mixins/_global.mixins.scss",
		"./styles/scss/2-tools/mixins/grid.mixins": "./dist/styles/scss/2-tools/mixins/_grid.mixins.scss",
		"./styles/scss/2-tools/placeholder/focus.placeholders": "./dist/styles/scss/2-tools/placeholder/_focus.placeholders.scss",
		"./styles/scss/3-generics/colours.generics": "./dist/styles/scss/3-generics/_colours.generics.scss",
		"./styles/scss/3-generics/typography.generics": "./dist/styles/scss/3-generics/_typography.generics.scss",
		"./styles/scss/4-elements/global.elements": "./dist/styles/scss/4-elements/_global.elements.scss",
		"./styles/scss/5-layout/form-group.layout": "./dist/styles/scss/5-layout/_form-group.layout.scss",
		"./styles/scss/5-layout/grid.layout": "./dist/styles/scss/5-layout/_grid.layout.scss",
		"./styles/scss/6-components/all.component": "./dist/styles/scss/6-components/_all.component.scss",
		"./styles/scss/6-components/buttons.component": "./dist/styles/scss/6-components/_buttons.component.scss",
		"./styles/scss/7-overrides/spacing.overrides": "./dist/styles/scss/7-overrides/_spacing.overrides.scss",
		"./styles/scss/7-overrides/visibility.overrides": "./dist/styles/scss/7-overrides/_visibility.overrides.scss",
		"./styles/scss/1-variables/*": "./dist/styles/scss/1-variables/*",
		"./styles/scss/2-tools/functions/*": "./dist/styles/scss/2-tools/functions/*",
		"./styles/scss/2-tools/mixins/*": "./dist/styles/scss/2-tools/mixins/*",
		"./styles/scss/2-tools/placeholder/*": "./dist/styles/scss/2-tools/placeholder/*",
		"./styles/scss/3-generics/*": "./dist/styles/scss/3-generics/*",
		"./styles/scss/4-elements/*": "./dist/styles/scss/4-elements/*",
		"./styles/scss/5-layout/*": "./dist/styles/scss/5-layout/*",
		"./styles/scss/6-components/*": "./dist/styles/scss/6-components/*",
		"./styles/scss/7-overrides/*": "./dist/styles/scss/7-overrides/*"
	},
	"sass": "dist/styles/scss/theme.scss"
}
