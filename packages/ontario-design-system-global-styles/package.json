{
	"name": "@ongov/ontario-design-system-global-styles",
	"version": "6.0.0",
	"private": false,
	"description": "Includes the Ontario Design System global styles that are used for more generic elements and layouts, as well as fonts and favicon files.",
	"license": "Apache-2.0",
	"type": "module",
	"main": "dist/index.js",
	"style": "dist/styles/css/compiled/ontario-theme.min.css",
	"files": [
		"dist/",
		"package.json",
		"README.md"
	],
	"scripts": {
		"build": "gulp deploy && pnpm run  docs:copy:readme",
		"clean": "rm -rf dist",
		"clean:full": "rm -rf node_modules && pnpm run clean",
		"scss": "sass --pkg-importer=node --watch ./src/styles/scss:dist/styles/css",
		"docs:copy:readme": "ts-node ../../scripts/documentation-helper.ts -f README.md -p \"---\ntitle: Global Styles\n---\n\" -df ../docusaurus/docs/05-readme-global-styles.md"
	},
	"devDependencies": {
		"@ongov/ontario-design-system-design-tokens": "workspace:*",
		"gulp": "^5.0.0",
		"gulp-autoprefixer": "^9.0.0",
		"gulp-clean-css": "^4.3.0",
		"gulp-concat": "^2.6.1",
		"gulp-if": "^3.0.0",
		"gulp-sass": "^6.0.1",
		"rimraf": "^6.0.1",
		"sass": "^1.83.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"authors": [
		{
			"name": "Scott Morris",
			"email": "Scott.Morris@ontario.ca"
		},
		{
			"name": "Elsa Ng",
			"email": "Elsa.Ng@ontario.ca"
		},
		{
			"name": "Erin Carrieres",
			"email": "Erin.Carrieres@ontario.ca"
		},
		{
			"name": "Meaghan Carrieres",
			"email": "Meaghan.Carrieres@ontario.ca"
		}
	],
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.js",
			"style": "./dist/styles/css/compiled/ontario-theme.min.css",
			"sass": "./dist/styles/scss/theme.scss"
		},
		"./styles/css/compiled/ontario-theme.min.css": "./dist/styles/css/compiled/ontario-theme.min.css",
		"./styles/scss/theme.scss": "./dist/styles/scss/theme.scss"
	},
	"sass": "dist/styles/scss/theme.scss"
}
