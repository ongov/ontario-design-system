{
	"name": "root",
	"version": "6.0.0-alpha.9",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build-libs": "lerna run --scope @ongov/ontario-design-system* build",
		"build-apps": "lerna run build --scope 'app-*' --ignore 'app-web-components-documentation'",
		"clean": "lerna run clean",
		"clean:docs": "rm -rf ./packages/docusaurus",
		"clean:full": "lerna run clean:full && pnpm clean:docs",
		"format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
		"prepare": "husky install",
		"refresh": "pnpm run clean && pnpm install && pnpm run build-libs",
		"semantic-release": "semantic-release",
		"test:e2e": "lerna run test:e2e",
		"test:e2e:apps": "lerna run test:e2e --scope 'app-*' --ignore 'app-web-components-documentation'",
		"test:unit": "lerna run test:unit",
		"test:vrt": "lerna run test:vrt",
		"test:update-snapshots": "lerna run test:update-snapshots",
		"test:all": "pnpm run test:unit && pnpm run test:e2e"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.5.0",
		"@commitlint/config-conventional": "^19.5.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/exec": "^7.1.0",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "12.0.2",
		"@semantic-release/npm": "^13.1.1",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^22.10.10",
		"bash-color": "^0.0.4",
		"commander": "^11.0.0",
		"husky": "^8.0.2",
		"js-yaml": "^4.1.0",
		"lerna": "^8.1.9",
		"prettier": "^3.3.3",
		"pretty-quick": "^4.0.0",
		"semantic-release": "^25.0.2",
		"semantic-release-lerna": "^2.13.0",
		"ts-node": "^10.9.2"
	},
	"optionalDependencies": {
		"@nrwl/nx-darwin-arm64": "15.9.3",
		"@nrwl/nx-darwin-x64": "15.9.3",
		"@nrwl/nx-linux-arm-gnueabihf": "15.9.3",
		"@nrwl/nx-linux-arm64-gnu": "15.9.3",
		"@nrwl/nx-linux-arm64-musl": "15.9.3",
		"@nrwl/nx-linux-x64-gnu": "15.9.3",
		"@nrwl/nx-linux-x64-musl": "15.9.3",
		"@nrwl/nx-win32-arm64-msvc": "15.9.3",
		"@nrwl/nx-win32-x64-msvc": "15.9.3",
		"bl": "^6.0.18"
	},
	"packageManager": "pnpm@10.2.0",
	"pnpm": {
		"patchedDependencies": {
			"@semantic-release/github@12.0.2": "patches/@semantic-release__github@12.0.2.patch"
		}
	}
}
